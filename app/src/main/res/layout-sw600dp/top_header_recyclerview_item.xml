<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_large">

    <ImageView
        android:id="@+id/img_menu_item"
        android:layout_width="@dimen/size_36dp"
        android:layout_height="@dimen/size_36dp"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingTop="@dimen/margin_medium"
        android:src="@drawable/sector_update"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tview_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TopHeaderMenu"
        android:text="@string/tab_menu"
        android:textSize="@dimen/font_xxlarge"
        app:layout_constraintLeft_toRightOf="@id/img_menu_item"
        android:layout_marginStart="@dimen/margin_small"
        android:paddingRight="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>