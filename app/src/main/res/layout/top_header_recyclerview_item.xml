<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp">

    <ImageView
        android:id="@+id/img_menu_item"
        android:layout_width="@dimen/size_28dp"
        android:layout_height="@dimen/size_28dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:src="@drawable/sector_update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tview_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TopHeaderMenu"
        android:layout_marginStart="@dimen/margin_xsmall"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_xsmall"
        android:text="@string/tab_menu"
        android:textSize="@dimen/font_xxlarge"
        android:lines="@integer/line"
        app:layout_constraintLeft_toRightOf="@id/img_menu_item"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>